@model Category

<div class="mt-5 mb-5">
    <h4 class="text-dark p-3 text-center bg-success">Update Category</h4>
</div>
<form method="post">
    <div class="border border-primary border-opacity-50 p-3 mt-4">
       @*  <div class="row pb-2">
            <h4 class="text-primary">Edit Category</h4>
            <hr />
        </div> *@
       
        <input asp-for="Id" type="hidden"/>
        @* <div asp-validation-summary="All"></div> it is show all type massage and also property type *@
        @* <div asp-validation-summary="ModelOnly"></div> only model massage show *@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Enter Category Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" placeholder="Enter Display Order" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-info form-control"><i class="bi bi-arrow-repeat"></i> Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control"><i class="bi bi-arrow-left"></i> Back To List</a>
            </div>
        </div>
    </div>
</form>

@section scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml"></partial>
    }
}
